{
  "name": "openAI-responses-client",
  "version": "1.0.1",
  "type": "flogo:activity",
  "title": "Responses Client",
  "author": "Mark Bloomfield",
  "ref": "github.com/mbloomfi-tibco/extensions/openAI/activity/responsesClient",
  "display": {
    "category": "openAI",
    "visible": true,
    "description": "This activity executes requests to openAPI responses API",
    "smallIcon": "icons/openAPISmall.png",
    "largeIcon": "icons/openAPILarge.png"
  },
  "feature": {
    "retry": {
      "enabled": true
    }
  },
  "settings": [
    {
      "name": "apiKey",
      "type": "string",
      "required": true,
      "display": {
        "name": "OpenAI API Key",
        "description": "OpenAI key that is required to authenticate with the OpenAI API",
        "appPropertySupport": true
      }
    },
    {
      "name": "inputFormat",
      "type": "string",
      "required": false,
      "value": "text",
      "display": {
        "name": "Input Format",
        "description": "The format of the result data passed into the plugin"
      },
      "allowed": [
        "text",
        "json",
        "image/jpeg;base64",
        "image/png;base64"
      ]
    },
    {
      "name": "outputFormat",
      "type": "string",
      "required": false,
      "value": "string",
      "display": {
        "name": "Output Format",
        "description": "The format of the result data passed back by the plugin"
      },
      "allowed": [
        "string",
        "json"
      ]
    }
  ],
  "inputs": [
    {
      "name": "model",
      "type": "string",
      "required": true
    },
    {
      "name": "prompt",
      "type": "string",
      "required": true
    },{
      "name": "tool",
      "type": "string",
      "required": false
    },{
      "name": "base64String",
      "type": "string",
      "required": false
    }

  ],
  "outputs": [
    {
      "name": "response",
      "type": "string"
    }
  ]
}