{
  "name": "chatgpt",
  "version": "1.0.1",
  "type": "flogo:activity",
  "title": "ChatGPT Client",
  "author": "Mark Bloomfield",
  "ref": "github.com/mbloomfi-tibco/extensions/openAI/activity/responsesClient",
  "display": {
    "category": "openAI",
    "visible": true,
    "description": "This activity executes requests to openAPI responses API",
    "smallIcon": "icons/openAPISmall.png",
		"largeIcon": "icons/openAPILarge.png"
  },
  "feature": {
    "retry": {
      "enabled": true
    }
  },
  "settings": [
    {
      "name": "outputFormat",
      "type": "string",
      "required": false,
      "value": "json",
      "display": {
        "name": "Output Format",
        "description": "The format of the result data passed back by the plugin"
      },
      "allowed": [
        "json",
        "string",
        "yaml"
      ]
    }
  ],
  "inputs": [
    {
      "name": "apiKey",
      "type": "string",
      "required": true
    },
    {
      "name": "model",
      "type": "string",
      "required": true
    },
    {
      "name": "prompt",
      "type": "string",
      "required": true
    }
  ],
  "outputs": [
    {
      "name": "response",
      "type": "string"
    }
  ]
}